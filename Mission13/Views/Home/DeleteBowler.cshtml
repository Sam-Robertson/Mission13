@{
    ViewData["Title"] = "Delete Bowler";
}

@model Mission13.Models.Bowler

<h2>Confirm Deletion</h2>
<br />
<h3>Are you sure you want to delete @Model.BowlerFirstName @Model.BowlerLastName from your records?</h3>
<br />
<form method="post" asp-controller="Home" asp-action="DeleteBowler">
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>

    <input type="hidden" asp-for="BowlerID" />
</form>